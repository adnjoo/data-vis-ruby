        <td><%= person.address2.capitalize %></td>
        <td><%= capitalize(person.city) %></td>
        <td><%= capitalize(person.state) %></td>
        <td><%= person.zipcode %></td>
        <td><%= capitalize(person.education) %></td>
        <td><%= person.estimated_income.downcase %></td>
