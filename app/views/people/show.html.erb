<%# capitalize method %>
<%=
def capitalize(input)
  input = input.split
  input.each_with_index do |ele, i|
    input[i] = ele.capitalize
  end
  return input.join(' ')
end
puts 'input'
%>


<div class="jumbotron">
  <h1 class='display-4'>
    Name:
    <%= capitalize(@person.f_name) %>
    <%= @person.m_name + '.' %>
    <%= capitalize(@person.l_name) %>,
  </h1>
  <h2>
    <%= capitalize(@person.prefix) + '.' %>
  </h2>
  <p class='lead'>
    Address:
    <%= capitalize(@person.address1) %>,
    <%= capitalize(@person.address2) %>
    <%= capitalize(@person.city) %>
    <br>
    <%= capitalize(@person.state) %>,
    <%= @person.zipcode %>
  </p>
  <p class='lead'>
    Education level: <%= capitalize(@person.education) %>
    <br>
    Income level: <%= @person.estimated_income.downcase %>
  </p>
</div>

